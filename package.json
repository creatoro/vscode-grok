{
  "name": "vscode-grok",
  "displayName": "Simply Grok for VSCode",
  "description": "Integrate Grok AI in VSCode to ask about your codebase",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Machine Learning"
  ],
  "activationEvents": [
    "onCommand:vscodeGrok.askWorkspace",
    "onCommand:vscodeGrok.askCurrentTab",
    "onCommand:vscodeGrok.askFunctionUnderCursor",
    "onCommand:vscodeGrok.askSelectedText",
    "onCommand:vscodeGrok.openChatPanel",
    "onCommand:vscodeGrok.searchWorkspace"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Simply Grok for VSCode",
      "properties": {
        "vscodeGrok.apiKey": {
          "type": "string",
          "default": "",
          "description": "xAI API key for authentication."
        },
        "vscodeGrok.model": {
          "type": "string",
          "default": "grok-4",
          "enum": [
            "grok-2",
            "grok-3",
            "grok-3-fast",
            "grok-3-mini",
            "grok-4",
            "grok-code-fast-1",
            "grok-4-heavy"
          ],
          "description": "Select the Grok model to use."
        },
        "vscodeGrok.outputMethod": {
          "type": "string",
          "default": "tab",
          "enum": [
            "tab",
            "outputChannel"
          ],
          "description": "Where to display Grok's responses."
        },
        "vscodeGrok.showPreview": {
          "type": "string",
          "default": "workspace-only",
          "enum": [
            "always",
            "workspace-only",
            "never"
          ],
          "description": "When to preview data sent to Grok."
        }
      }
    },
    "commands": [
      {
        "command": "vscodeGrok.askWorkspace",
        "title": "Ask Grok: Workspace"
      },
      {
        "command": "vscodeGrok.askCurrentTab",
        "title": "Ask Grok: Current Tab"
      },
      {
        "command": "vscodeGrok.askFunctionUnderCursor",
        "title": "Ask Grok: Function Under Cursor"
      },
      {
        "command": "vscodeGrok.askSelectedText",
        "title": "Ask Grok: Selected Text"
      },
      {
        "command": "vscodeGrok.openChatPanel",
        "title": "Ask Grok: Open Chat Panel"
      },
      {
        "command": "vscodeGrok.searchWorkspace",
        "title": "Ask Grok: Search Workspace"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "mocha --require ts-node/register src/test/**/*.ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "@types/node": "^20.11.0",
    "@types/node-fetch": "^2.6.4",
    "@types/mocha": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^9.0.0",
    "typescript": "^5.0.0",
    "@vscode/vsce": "^3.0.0",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.1"
  },
  "dependencies": {
    "node-fetch": "^2.6.7"
  }
}